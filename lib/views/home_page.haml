!!! 5
%html  
  %head
    %link{:rel => 'stylesheet', :href => '/static/css/bootstrap.min.css'}
    %link{:rel => 'stylesheet/less', :type => 'text/css', :href => '/static/css/home_page.less'}
        
    %script{:src => '/static/js/jquery-1.7.1.min.js', :type => 'text/javascript'}        
    %script{:src => '/static/js/bootstrap.min.js', :type => 'text/javascript'}
    %script{:src => '/static/js/bootstrap-modal.js', :type => 'text/javascript'}    
    %script{:src => '/static/js/bootstrap-alert.js', :type => 'text/javascript'}    
    %script{:src => '/static/js/bootstrap-dropdown.js', :type => 'text/javascript'}    
    %script{:src => '/static/js/spin.min.js', :type => 'text/javascript'}    
    %script{:src => '/static/js/login.js', :type => 'text/javascript'}
    %script{:src => '/static/js/less.js', :type => 'text/javascript'}   
    %title Backpack
  %body      
    %div.navbar
      %div.navbar-inner
        %div.container
          %a.brand Backpack
          %ul.nav.pull-right
            %li.dropdown
              %a.dropdown-toggle#pop(onclick="javascript:$('#myModal').modal('show');" data-toggle="dropdown")
                Login/Register
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"} Logout
    #notice
    
    %div.container#upload
      %form{:action => @upload_link, :enctype => 'multipart/form-data', :method => 'post'}      
        %input#file_select{:type => 'file', :name => 'file'}
        %input#upload_username{:type => 'text', :name => 'username', :placeholder => 'username (optional)', :style => "display:none;"}
        %input#upload_token{:type => 'text', :name => 'auth_token', :placeholder => "authentication token (optional)", :style => "display:none;"}
        %input.btn-primary.btn-large#submit_button{:type => 'submit', :value => 'Upload this file!'}
      
    #myModal.modal.hide.fade
      .modal-header
        %a.close{"data-dismiss" => "modal"} ×
        %h3 Login to Backpack or Create an Account
      .modal-body
        %form{:method => 'post'}              
        %input#username{:textype => 'text', :name => 'username', :placeholder => "Enter your username"}
        %input#password{:type => 'password', :name => 'password', :placeholder => "And password…"}
      .modal-footer
        %a.btn{"data-dismiss" => "modal", :href => "#"} Close
        %a.btn.btn-primary{:href => "javascript:loginBackpack();"} Login

    #LogoutModal.modal.hide.fade
      .modal-header
        %a.close{"data-dismiss" => "modal"} ×
        %h3 Sure you want to Logout?
      .modal-body
        %a.btn.btn-large.btn-danger#logout-button{:onclick => "javascript:logout();" } Logout!
        