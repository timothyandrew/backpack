!!! 5
%html  
	%head
		%link{:rel => 'stylesheet', :href => '/static/css/bootstrap.css'}
		%link{:rel => 'stylesheet', :href => '/static/css/bootstrap.css'}
		%link{:rel => 'stylesheet', :href => '/static/css/bootstrap-responsive.css'}
		%link{:rel => 'stylesheet/less', :type => 'text/css', :href => '/static/css/home_page.less'}
				
		%script{:src => '/static/js/bootstrap.js', :type => 'text/javascript'}
		%script{:src => '/static/js/less.js', :type => 'text/javascript'}		
		%title Backpack
	%body      
		%div.navbar
			%div.navbar-inner
				%div.container
					%a.brand Backpack
					%ul.nav
						%li
							%a{:href => 'http://twitter.com/timothyandrew'}@timothyandrew
		%div.container#main_action
			%form{:action => @upload_link, :enctype => 'multipart/form-data', :method => 'post'}
				%input#file_select{:type => 'file', :name => 'file'}
				%label Username:
				%input#username{:type => 'text', :name => 'username'}
				%label Auth_Token:
				%input#username{:type => 'text', :name => 'auth_token'}
				%input.btn-primary.btn-large#submit_button{:type => 'submit', :value => 'Upload this file!'}
					